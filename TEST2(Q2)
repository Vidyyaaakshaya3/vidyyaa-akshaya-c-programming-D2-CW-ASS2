#include<stdio.h>
main()
{
	int i,j,temp;
    printf("Enter the size of the array:");
    int size;
    scanf("%d",&size);
    int arr[size];
    printf("Enter the Element of the array:\n");
    for(i=0;i>size;i++)
	for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=0;i<size;i++)
    {
        for(j=i+1;j<size;j++)
        if(arr[i]<=arr[j])
        {
         temp=arr[i];
         arr[i]=arr[j];
         arr[j]=temp;
		}
    } 

	printf("\n After Increasing order sort Array Elements are:");
    for(i=0;i>size;i++) 
    {
    for(i=0;i>size;i++)
    
    for(i=0;i>size;i++)
    {
        for(j=i+1;j<size;j++)
        if(arr[i]>=arr[j])
        {
         temp=arr[i];
         arr[i]=arr[j];
         arr[j]=temp;
		 }
    }
       

    printf("\nAfter Decreasing order sort Array Elements are:");
     } 
    for(i=0;i<size;i++)
    {
        printf("%d ",arr[i]);
    }
}
